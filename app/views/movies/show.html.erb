<div class="container mx-auto px-6 py-8 text-left">  <!-- テキストの左寄せ -->
  <h1 class="text-4xl font-bold mb-6"><%= @movie.title %></h1>  <!-- タイトルも左寄せ -->

  <div class="flex flex-col items-start space-y-6">  <!-- 要素を左寄せ -->
    <% if @movie.poster_path.present? %>
      <%= image_tag("https://image.tmdb.org/t/p/w1280#{@movie.poster_path}", class: "rounded-lg shadow-lg w-full md:w-1/2", alt: "#{@movie.title} ポスター") %>  <!-- ポスタースタイル -->
    <% end %>

    <div class="card bg-base-200 p-6 rounded-lg">  <!-- カードスタイル -->
      <% if @movie.release_date.present? %>
        <p class="text-lg text-gray-700">公開日: <%= @movie.release_date %></p>  <!-- リリース日スタイル -->
      <% end %>

      <% if @movie.overview.present? %>
        <p class="text-md text-gray-700">概要: <%= @movie.overview %></p>  <!-- 概要スタイル -->
      <% end %>
    </div>

    <% if user_signed_in? %>  <!-- ユーザーがサインインしている場合 -->
      <%= render 'reviews/form' %>  <!-- レビュー投稿フォームの部分テンプレート -->
    <% else %>
      <div class="alert alert-warning">  <!-- 警告スタイル、左寄せ -->
        <p>レビュー投稿は、登録したユーザーのみ可能です。<%= link_to 'ログイン', new_user_session_path %></p>
      </div>
    <% end %>

    <div class="w-full md:w-1/2 mt-6">  <!-- レビューリスト、左寄せ -->
      <h2 class="text-2xl font-bold">レビュー一覧</h2>
      <% @movie.reviews.each do |review| %>
        <div class="bg-base-100 p-4 rounded-lg mb-4 text-left">  <!-- 各レビューを左寄せ -->
          <p class="text-gray-800"><%= review.content %></p>  <!-- レビュー内容 -->
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center">  <!-- 投票ボタン -->
      <% if user_signed_in? %>
        <%= link_to "投票", vote_movie_path(@movie.id), class: "btn btn-primary", data: { turbo_method: :post, turbo_confirm: '投票しますか？' } %>  <!-- 左寄せ -->
      <% else %>
        <div class="alert alert-warning">  <!-- 警告スタイル -->
          <p>投票は、登録したユーザーのみ可能です。<%= link_to 'ログイン', new_user_session_path %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
