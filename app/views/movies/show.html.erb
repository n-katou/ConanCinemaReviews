<div class="container mx-auto px-6 py-8">  <!-- コンテナスタイル -->
  <h1 class="text-4xl font-bold text-center mb-6"><%= @movie.title %></h1>  <!-- タイトルスタイル -->

  <div class="flex flex-col items-center space-y-6">  <!-- 垂直方向に要素を並べる -->
    <% if @movie.poster_path.present? %>
      <%= image_tag("https://image.tmdb.org/t/p/w1280#{@movie.poster_path}", class: "rounded-lg shadow-lg w-full md:w-1/2", alt: "#{@movie.title} ポスター") %>  <!-- ポスタースタイル -->
    <% end %>

    <div class="bg-base-200 p-6 rounded-lg shadow-lg">  <!-- カードスタイル -->
      <% if @movie.release_date.present? %>
        <p class="text-lg text-gray-700">公開日: <%= @movie.release_date %></p>  <!-- リリース日スタイル -->
      <% end %>

      <% if @movie.overview.present? %>
        <p class="text-md text-gray-700">概要: <%= @movie.overview %></p>  <!-- 概要スタイル -->
      <% end %>
    </div>
    
    <div class="mt-6">  <!-- 投票ボタン -->
      <%= button_to "投票", vote_movie_path(@movie.id), method: :post %>
    </div>

    <div class="review-form">
      <h2 class="text-2xl font-bold">レビューを投稿する</h2>
      <% if @review.present? %>
        <%= form_with model: [@movie, Review.new], local: true do |f| %>
          <%= f.hidden_field :movie_id, value: @movie.api_id %>  <!-- api_idを送信する -->
          <div class="form-group">
            <%= f.label :content, "レビュー内容" %>
            <%= f.text_area :content, class: "form-control", rows: 4 %>
          </div>
          <%= f.submit "投稿", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <p>レビューを投稿できません。</p>
      <% end %>
    </div>

    <div class="w-full md:w-1/2 mt-6">  <!-- レビューリスト -->
      <h2 class="text-2xl font-bold">レビュー一覧</h2>
      <% @movie.reviews.each do |review| %>
        <div class="bg-base-100 p-4 rounded-lg mb-4">  <!-- 各レビューをカードとして表示 -->
          <p class="text-gray-800"><%= review.content %></p>  <!-- レビュー内容 -->
        </div>
      <% end %>
    </div>
  </div>
</div>
