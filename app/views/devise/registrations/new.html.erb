<div class="container mx-auto px-6 py-8">  <!-- コンテナスタイル -->
  <div class="flex flex-col items-center space-y-4">  <!-- 要素を中央に配置 -->
    <div class="card bg-base-200 shadow-lg p-6 w-96 text-center">  <!-- カードスタイル -->
      <h1 class="text-2xl font-bold mb-6">サインアップ画面</h1>  <!-- タイトルスタイル -->

      <div class="card-body">  <!-- カードの内容 -->
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
          <div class="form-control mb-4">  <!-- フォームフィールド -->
            <%= f.email_field :email, class: "input input-bordered", placeholder: "Eメール" %>  <!-- Eメール入力 -->
          </div>

          <div class="form-control mb-4">  <!-- フォームフィールド -->
            <%= f.text_field :name, class: "input input-bordered", placeholder: "ユーザ名" %>  <!-- ユーザー名入力 -->
          </div>

          <div class="form-control mb-4">  <!-- フォームフィールド -->
            <%= f.password_field :password, class: "input input-bordered", placeholder: "パスワード" %>  <!-- パスワード入力 -->
          </div>

          <div class="form-control mb-4">  <!-- フォームフィールド -->
            <%= f.password_field :password_confirmation, class: "input input-bordered", placeholder: "パスワード確認" %>  <!-- パスワード確認入力 -->
          </div>

          <div class="mt-4">  <!-- サインアップボタン -->
            <%= f.submit "サインアップ", class: "btn btn-primary w-full" %>  <!-- 全幅ボタン -->
          </div>
        <% end %>

        <% if notice %>  <!-- フラッシュメッセージ -->
          <p class="text-green-500"><%= notice %></p>
        <% elsif alert %>  <!-- アラートメッセージ -->
          <p class="text-red-500"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card bg-base-100 shadow-lg py-4 mt-6 w-96 text-center">  <!-- 別のカードスタイル -->
      <p>既にアカウントを持っている？</p>  <!-- テキストスタイル -->
      <%= link_to "サインイン", new_user_session_path, class: "btn btn-link text-blue-500" %>  <!-- リンクスタイル -->
    </div>
  </div>
</div>
