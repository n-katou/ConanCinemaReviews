<div class="container mx-auto px-6 py-8">  <!-- コンテナスタイル -->
  <div class="flex justify-center">  <!-- 全体を中央に寄せる -->
    <div class="card bg-base-200 shadow-lg p-6 w-full md:w-1/2">  <!-- カードスタイル -->
      <h2 class="text-2xl font-bold text-center mb-6">ユーザー編集</h2>  <!-- 中央寄せのタイトル -->

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), method: :put, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>  <!-- エラーメッセージの表示 -->

        <div class="mb-4">  <!-- フォームフィールドの間に余白 -->
          <%= f.label :name, "ユーザー名", class: "block text-lg" %>  <!-- ラベル -->
          <%= f.text_field :name, class: "form-control w-full p-2 border rounded", autofocus: true, autocomplete: "name" %>  <!-- ユーザー名入力 -->
        </div>

        <div class="mb-4">  <!-- パスワードフィールド -->
          <%= f.label :password, "新しいパスワード (変更しない場合は空白で)" %>  <!-- パスワードラベル -->
          <%= f.password_field :password, class: "form-control w-full p-2 border rounded", autocomplete: "new-password" %>  <!-- パスワード入力 -->
        </div>

        <div class="actions text-right">  <!-- フォームアクション -->
          <%= f.submit "更新", class: "btn btn-primary" %>  <!-- 更新ボタン -->
        </div>
      <% end %>

      <h3 class="text-xl font-bold mt-6 text-left">アカウントを退会</h3>  <!-- キャンセルオプション -->
      <div class="text-left">
        <%= link_to "退会", registration_path(resource_name), data: { turbo_confirm: "本当にアカウントを退会しますか？", turbo_method: :delete }, class: "btn btn-error" %>  <!-- アカウントキャンセルボタン -->
      </div>

      <div class="text-center mt-4">  <!-- 戻るリンク -->
        <%= link_to "戻る", :back, class: "text-blue-500" %>
      </div>
    </div>
  </div>
</div>
