<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col items-center space-y-4">
    <div class="card w-96 bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">ログイン画面</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Eメールアドレス", class: "input input-bordered w-full" %>
          <%= f.password_field :password, placeholder: "パスワード", class: "input input-bordered w-full" %>
          <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
        <% end %>
        <%#= link_to "LINEログイン", user_line_omniauth_callback_path %>
        <%#= link_to "パスワードを忘れた？", new_user_password_path, class: "link link-accent" %>
      </div>
    </div>

    <div class="text-center">
      アカウントを持っていない？
      <%= link_to "サインアップ", new_user_registration_path, class: "link link-primary" %>
    </div>
  </div>
</div>
