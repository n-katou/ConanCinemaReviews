<div class="container mx-auto px-6 py-8">  <!-- コンテナスタイル -->
  <h2 class="text-2xl font-bold mb-6">パスワードをお忘れですか？</h2>  <!-- タイトルスタイル -->

  <div class="card bg-base-200 shadow-lg p-6 w-96 mx-auto">  <!-- カードスタイル -->
    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>  <!-- エラーメッセージの表示 -->

      <div class="form-control mb-4">  <!-- フォームフィールド -->
        <%= f.label :email, "Eメール" %>  <!-- ラベル -->
        <%= f.email_field :email, class: "input input-bordered w-full", autofocus: true, autocomplete: "email" %>  <!-- Eメール入力 -->
      </div>

      <div class="form-control">  <!-- アクション -->
        <%= f.submit "リセットパスワードの手順を送信", class: "btn btn-primary w-full" %>  <!-- 全幅ボタン -->
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">  <!-- リンク -->
    <%= render "devise/shared/links" %>  <!-- 他のDeviseリンク -->
  </div>
</div>
