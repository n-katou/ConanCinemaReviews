<div class="w-full md:w-1/2 mt-6 text-left">  <!-- レビューリスト、左寄せ -->
  <h2 class="text-2xl font-bold">レビュー一覧</h2>  <!-- タイトルも左寄せ -->
  
  <% @movie.reviews.each do |review| %>
    <div class="bg-base-100 p-4 rounded-lg mb-4">  <!-- 各レビューを左寄せでカード表示 -->
      <p class="text-gray-800"><%= review.content %></p>  <!-- レビュー内容 -->
    </div>
  <% end %>
</div>
