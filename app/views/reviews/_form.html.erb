<div class="review-form">
  <h2 class="text-2xl font-bold mb-4">レビューを投稿する</h2>  <!-- 見出しスタイル -->
  <%= form_with model: [@movie, Review.new], local: true do |f| %>
    <div class="form-group mb-4">  <!-- フォームグループとマージン -->
      <%= f.label :content, "レビュー内容", class: "block text-lg font-semibold" %>  <!-- ラベルスタイル -->
      <%= f.text_area :content, class: "form-control w-full p-4 border rounded-lg", rows: 4 %>  <!-- テキストエリアスタイル -->
    </div>
    
    <%= f.submit "投稿", class: "btn btn-primary" %>  <!-- 投稿ボタンスタイル -->
  <% end %>
</div>
